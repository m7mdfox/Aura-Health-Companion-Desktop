<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="522.0" prefWidth="869.0" style="-fx-background-radius: 15; -fx-border-radius: 15; -fx-background-color: #F2F7FF;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.auradesktop.Controllers.XRayAnalysisController">
   <children>
      <fx:include fx:id="topBar" source="TopBar.fxml" />
      
      <Label layoutX="40.0" layoutY="80.0" text="X-Ray Analysis" textFill="#00bfa5">
         <font>
            <Font name="System Bold" size="28.0" />
         </font>
      </Label>

      <VBox layoutX="40.0" layoutY="130.0" prefHeight="350.0" prefWidth="350.0" spacing="10.0">
         <children>
             <Label text="Selected Image:" textFill="#666666">
                 <font>
                     <Font name="System Bold" size="14.0"/>
                 </font>
             </Label>
             <ImageView fx:id="imageView" fitHeight="250.0" fitWidth="350.0" preserveRatio="true" style="-fx-border-color: #cccccc; -fx-border-width: 1;"/>
             <Button text="Upload X-Ray Image" onAction="#uploadImage" prefWidth="350.0" style="-fx-background-color: #0878f2; -fx-text-fill: white; -fx-background-radius: 5;"/>
             <Button text="Analyze with AI" fx:id="analyzeBtn" disable="true" onAction="#analyzeImage" prefWidth="350.0" style="-fx-background-color: #00bfa5; -fx-text-fill: white; -fx-background-radius: 5;"/>
         </children>
      </VBox>

      <VBox layoutX="420.0" layoutY="130.0" prefHeight="350.0" prefWidth="410.0" spacing="10.0">
          <children>
              <Label text="AI Diagnosis Result:" textFill="#666666">
                  <font>
                      <Font name="System Bold" size="14.0"/>
                  </font>
              </Label>
              
              <!-- Result Label for clear verdict -->
              <Label fx:id="resultLabel" text="Pending Analysis..." wrapText="true" alignment="CENTER" prefHeight="200.0" prefWidth="410.0" style="-fx-border-color: #cccccc; -fx-background-color: white; -fx-padding: 20;">
                   <font>
                      <Font name="System Bold" size="24.0"/>
                   </font>
              </Label>
              
              <Button text="Generate Detailed Report (PDF)" fx:id="savePdfBtn" disable="true" onAction="#saveReport" prefWidth="410.0" style="-fx-background-color: #ff9800; -fx-text-fill: white; -fx-background-radius: 5;"/>
              <Label fx:id="statusLabel" text="" textFill="#666666"/>
          </children>
      </VBox>
      
   </children>
</AnchorPane>
