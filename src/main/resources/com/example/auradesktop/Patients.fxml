<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-radius: 15; -fx-border-radius: 15; -fx-background-color: #F2F7FF;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.auradesktop.Controllers.PatientsController">
   <stylesheets>
      <URL value="@tablestyle.css" />
      <URL value="@buttonstyle.css" />
      <URL value="@chat.css" />
   </stylesheets>
   <children>
      <fx:include fx:id="topBar" source="TopBar.fxml" />

      <HBox layoutY="60.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="60.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
         <children>

            <VBox prefHeight="200.0" prefWidth="280.0" spacing="10.0" HBox.hgrow="NEVER">
               <children>
                  <Label text="Messages">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>

                  <TextField fx:id="searchField" promptText="Search" style="-fx-background-radius: 15;" styleClass="search-field">
                     <padding>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                     </padding>
                  </TextField>

                  <Label text="Sort by Newest" textFill="#8d94a3">
                     <font>
                        <Font size="11.0" />
                     </font>
                  </Label>

                  <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;" vbarPolicy="NEVER" VBox.vgrow="ALWAYS">
                     <content>
                        <VBox fx:id="patientsListContainer" spacing="5.0" />
                     </content>
                  </ScrollPane>
               </children>
            </VBox>

            <AnchorPane style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 0);" HBox.hgrow="ALWAYS">
               <children>
                  <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

                     <top>
                        <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="10.0" style="-fx-border-color: #f0f0f0; -fx-border-width: 0 0 1 0;" BorderPane.alignment="CENTER">
                           <padding>
                              <Insets left="20.0" right="20.0" />
                           </padding>
                           <children>
                              <VBox alignment="CENTER_LEFT">
                                 <children>
                                    <Label fx:id="currentChatNameLabel" text="Select a Patient">
                                       <font>
                                          <Font name="System Bold" size="16.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="currentChatStatusLabel" text="Offline" textFill="#b5b5b5">
                                       <font>
                                          <Font size="12.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </VBox>
                              <Pane HBox.hgrow="ALWAYS" />
                              <Button mnemonicParsing="false" style="-fx-background-color: transparent;" text="â“˜" textFill="#b5b5b5">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Button>
                           </children>
                        </HBox>
                     </top>

                     <center>
                        <ScrollPane fx:id="chatScrollPane" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: white;" styleClass="chat-scroll-pane" vbarPolicy="AS_NEEDED" BorderPane.alignment="CENTER">
                           <content>
                              <VBox fx:id="chatMessagesContainer" spacing="15.0" style="-fx-background-color: white;">
                                 <padding>
                                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                 </padding>
                              </VBox>
                           </content>
                        </ScrollPane>
                     </center>

                     <bottom>
                        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-border-color: #f0f0f0; -fx-border-width: 1 0 0 0;" BorderPane.alignment="CENTER">
                           <padding>
                              <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
                           </padding>
                           <children>
                              <Button mnemonicParsing="false" style="-fx-background-color: transparent;" text="ðŸ“Ž" textFill="#b5b5b5">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Button>
                              <TextField fx:id="messageInputField" promptText="Type your message here.." style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS" />
                              <Button onAction="#onSendMessage" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: #0944ef; -fx-font-weight: bold;" text="Send message" />
                           </children>
                        </HBox>
                     </bottom>
                  </BorderPane>
               </children>
            </AnchorPane>
         </children>
      </HBox>
   </children>
</AnchorPane>